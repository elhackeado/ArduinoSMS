<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/userphoto" />


    <EditText
        android:id="@+id/fieldPhoneNumber"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_weight="1.0"
        android:background="@drawable/phone_edit_text"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fieldVerificationCode"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fieldPhoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_weight="1.0"
        android:background="@drawable/phone_edit_text"
        android:hint="Verification Code"
        android:inputType="number"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonStartVerification"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldVerificationCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_weight="1.0"
        android:background="@drawable/phone_btn_style"
        android:text="Send OTP"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonVerifyPhone"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonStartVerification"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/buttonStartVerification"
        android:layout_marginLeft="65dp"
        android:layout_weight="1.0"
        android:background="@drawable/phone_btn_style"
        android:text="Verify"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonResend"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonStartVerification"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/buttonStartVerification"
        android:layout_marginRight="65dp"
        android:layout_weight="1.0"
        android:background="@drawable/phone_btn_style"
        android:text="Resend"
        android:textColor="#ffffff" />




</RelativeLayout>

